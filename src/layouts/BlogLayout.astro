---
import BaseLayout from './BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import { getTranslations } from '@/utils/i18n';
import { getRelatedPosts, getAllPosts, generateTableOfContents } from '@/utils/blog';
import { generateArticleSchema, generateBreadcrumbSchema } from '@/utils/seo';
import type { Locale } from '@/i18n/config';

export interface Props {
  post: any;
  locale?: Locale;
}

const { post, locale = 'pt' } = Astro.props;
const t = await getTranslations(locale, 'common');

if (!post) {
  return Astro.redirect('/404');
}

const allPosts = await getAllPosts(locale);
const relatedPosts = getRelatedPosts(post, allPosts, 3);
const toc = generateTableOfContents(post.content);

const seo = {
  title: post.title,
  description: post.description,
  image: post.cover,
  canonical: post.canonical,
  type: 'article' as const,
  publishedTime: post.date.toISOString(),
  modifiedTime: post.date.toISOString(),
  author: 'Consultoria Empresarial',
  tags: post.tags
};

const breadcrumbItems = [
  { name: 'Início', url: 'https://consultoria-exemplo.com' },
  { name: 'Blog', url: 'https://consultoria-exemplo.com/blog' },
  { name: post.title, url: `https://consultoria-exemplo.com/blog/${post.slug}` }
];
---

<BaseLayout seo={seo} locale={locale} path={`/blog/${post.slug}`}>
  <!-- Schema.org JSON-LD -->
  <script type="application/ld+json" set:html={JSON.stringify(generateArticleSchema(post, locale))} />
  <script type="application/ld+json" set:html={JSON.stringify(generateBreadcrumbSchema(breadcrumbItems))} />
  
  <Header locale={locale} currentPath="/blog" />
  
  <!-- Breadcrumb -->
  <nav class="bg-gray-50 dark:bg-gray-800 py-4">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <ol class="flex items-center space-x-2 text-sm">
        <li>
          <a href="/" class="text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300">
            Início
          </a>
        </li>
        <li class="text-gray-400">/</li>
        <li>
          <a href="/blog" class="text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300">
            Blog
          </a>
        </li>
        <li class="text-gray-400">/</li>
        <li class="text-gray-900 dark:text-white font-medium truncate">
          {post.title}
        </li>
      </ol>
    </div>
  </nav>

  <!-- Article -->
  <article class="bg-white dark:bg-gray-900">
    <!-- Reading Progress Bar -->
    <div class="fixed top-0 left-0 w-full h-1 bg-gray-200 dark:bg-gray-700 z-50">
      <div id="reading-progress" class="h-full bg-blue-600 transition-all duration-300 ease-out" style="width: 0%"></div>
    </div>

    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
        <!-- Main Content -->
        <div class="lg:col-span-10 lg:col-start-2">
          <!-- Article Header -->
          <header class="pt-16 pb-8">
            <div class="flex items-center text-sm text-gray-500 dark:text-gray-400 mb-6">
              <span class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-full text-sm font-medium">
                {post.category}
              </span>
              <span class="mx-3">•</span>
              <time datetime={post.date.toISOString()}>
                {post.date.toLocaleDateString('pt-BR', { 
                  year: 'numeric', 
                  month: 'long', 
                  day: 'numeric' 
                })}
              </time>
              <span class="mx-3">•</span>
              <span>{post.readingTime} min de leitura</span>
            </div>
            
            <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-gray-900 dark:text-white mb-12 leading-tight tracking-tight font-serif">
              {post.title}
            </h1>
            
            <p class="text-2xl md:text-3xl text-gray-600 dark:text-gray-300 mb-12 leading-relaxed font-serif max-w-4xl">
              {post.description}
            </p>
            
            <!-- Author Info -->
            <div class="flex items-center mb-12 p-6 bg-gray-50 dark:bg-gray-800 rounded-2xl">
              <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center shadow-lg">
                <span class="text-white font-semibold text-xl">
                  CE
                </span>
              </div>
              <div class="ml-6">
                <p class="font-semibold text-gray-900 dark:text-white text-lg">
                  Consultoria Empresarial
                </p>
                <p class="text-gray-600 dark:text-gray-300">
                  Especialistas em transformação digital
                </p>
              </div>
            </div>
            
            <!-- Tags -->
            <div class="flex flex-wrap gap-2 mb-8">
              {post.tags.map((tag: string) => (
                <span class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-full text-sm hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors cursor-pointer">
                  #{tag}
                </span>
              ))}
            </div>
          </header>
          
          <!-- Featured Image -->
          <div class="mb-16">
            <div class="relative overflow-hidden rounded-2xl shadow-2xl">
              <img 
                src={post.cover} 
                alt={post.title}
                class="w-full h-80 md:h-96 lg:h-[600px] object-cover"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
            </div>
          </div>
          
          <!-- Article Content -->
          <div class="prose prose-xl dark:prose-invert max-w-none font-serif prose-p:text-xl prose-p:leading-relaxed prose-p:mb-8 prose-h1:text-4xl prose-h1:mb-8 prose-h1:mt-16 prose-h2:text-3xl prose-h2:mb-6 prose-h2:mt-12 prose-h3:text-2xl prose-h3:mb-4 prose-h3:mt-10 prose-li:text-xl prose-li:leading-relaxed prose-li:mb-3 prose-blockquote:text-xl prose-blockquote:my-10 prose-blockquote:pl-8 prose-blockquote:border-l-4 prose-blockquote:border-blue-500">
            <slot />
          </div>
          
          <!-- Article Footer -->
          <footer class="mt-20 pt-16 border-t border-gray-200 dark:border-gray-700">
            <!-- Social Share -->
            <div class="flex items-center justify-center space-x-8 mb-12">
              <span class="text-lg text-gray-500 dark:text-gray-400 font-medium">Compartilhar:</span>
              <a 
                href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.title)}&url=${encodeURIComponent(`https://consultoria-exemplo.com/blog/${post.slug}`)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-400 hover:text-blue-400 transition-all duration-300 p-3 rounded-full hover:bg-blue-50 dark:hover:bg-blue-900/20 hover:scale-110"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              </a>
              <a 
                href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(`https://consultoria-exemplo.com/blog/${post.slug}`)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-400 hover:text-blue-600 transition-all duration-300 p-3 rounded-full hover:bg-blue-50 dark:hover:bg-blue-900/20 hover:scale-110"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
            </div>
            
            <!-- Author Bio -->
            <div class="flex items-center justify-center p-8 bg-gradient-to-r from-gray-50 to-blue-50 dark:from-gray-800 dark:to-blue-900/20 rounded-2xl">
              <div class="w-20 h-20 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center shadow-xl">
                <span class="text-white font-semibold text-2xl">
                  CE
                </span>
              </div>
              <div class="ml-8 text-center">
                <p class="font-semibold text-gray-900 dark:text-white text-xl">
                  Consultoria Empresarial
                </p>
                <p class="text-gray-600 dark:text-gray-300 text-lg">
                  Especialistas em transformação digital e estratégia empresarial
                </p>
              </div>
            </div>
          </footer>
        </div>
      </div>
    </div>
  </article>

  <!-- Related Posts Section -->
  {relatedPosts.length > 0 && (
    <section class="py-16 bg-gray-50 dark:bg-gray-800">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">
          Artigos Relacionados
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {relatedPosts.map((relatedPost) => (
            <article class="bg-white dark:bg-gray-900 rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
              <div class="p-6">
                <h3 class="font-semibold text-gray-900 dark:text-white mb-2 hover:text-blue-600 dark:hover:text-blue-400">
                  <a href={`/blog/${relatedPost.slug}`}>
                    {relatedPost.title}
                  </a>
                </h3>
                <p class="text-gray-600 dark:text-gray-300 text-sm mb-3">
                  {relatedPost.date.toLocaleDateString('pt-BR')}
                </p>
                <p class="text-gray-500 dark:text-gray-400 text-sm">
                  {relatedPost.readingTime} min de leitura
                </p>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Newsletter Section -->
  <section class="py-16 bg-blue-50 dark:bg-blue-900/20">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
        Receba nossos artigos
      </h2>
      <p class="text-gray-600 dark:text-gray-300 mb-8">
        Fique por dentro das últimas tendências em transformação digital e estratégia empresarial.
      </p>
      <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
        <input
          type="email"
          placeholder="Seu e-mail"
          class="flex-1 px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-800 dark:text-white"
        />
        <button
          type="submit"
          class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium transition-colors"
        >
          {t.buttons.subscribe}
        </button>
      </form>
    </div>
  </section>

  <Footer locale={locale} />
</BaseLayout>

<script>
  // Reading progress bar
  function updateReadingProgress() {
    const article = document.querySelector('article');
    const progressBar = document.getElementById('reading-progress');
    
    if (!article || !progressBar) return;
    
    const articleTop = article.offsetTop;
    const articleHeight = article.offsetHeight;
    const windowHeight = window.innerHeight;
    const scrollTop = window.pageYOffset;
    
    const progress = Math.min(
      Math.max((scrollTop - articleTop + windowHeight) / articleHeight, 0),
      1
    );
    
    progressBar.style.width = `${progress * 100}%`;
  }
  
  // Smooth scrolling for anchor links
  function initSmoothScrolling() {
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
  }
  
  // Initialize on page load
  document.addEventListener('DOMContentLoaded', function() {
    updateReadingProgress();
    initSmoothScrolling();
    
    // Update progress on scroll
    window.addEventListener('scroll', updateReadingProgress);
    window.addEventListener('resize', updateReadingProgress);
  });
</script>

