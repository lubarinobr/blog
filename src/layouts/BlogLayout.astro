---
import { Image } from 'astro:assets';
import BaseLayout from './BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import MDXImage from '@/components/MDXImage.astro';
import { getTranslations } from '@/utils/i18n';
import { getRelatedPosts, getAllPosts, generateTableOfContents, getAdjacentPosts } from '@/utils/blog';
import { generateArticleSchema, generateBreadcrumbSchema } from '@/utils/seo';
import { generateRelatedPosts as generateSmartRelatedPosts, generateBreadcrumbLinks } from '@/utils/internal-linking';
import type { Locale } from '@/i18n/config';

export interface Props {
  post: any;
  locale?: Locale;
}

const { post, locale = 'pt' } = Astro.props;
const t = await getTranslations(locale, 'common');

if (!post) {
  return Astro.redirect('/404');
}

const allPosts = await getAllPosts(locale);
const relatedPosts = generateSmartRelatedPosts(post, allPosts, 3);
const toc = generateTableOfContents(post.content);
const breadcrumbItems = generateBreadcrumbLinks(`/blog/${post.slug}`, locale);
const { previous, next } = getAdjacentPosts(post, allPosts);

const authorName = 'Sapiens IT Team';
const authorInitials = 'SI';

const blogPath = `/blog/${post.slug}/`;
const seo = {
  title: post.title,
  description: post.description,
  image: post.cover,
  canonical: post.canonical,
  type: 'article' as const,
  publishedTime: post.date.toISOString(),
  modifiedTime: post.date.toISOString(),
  author: authorName,
  tags: post.tags
};

---

<BaseLayout seo={seo} locale={locale} path={blogPath}>
  <!-- Schema.org JSON-LD -->
  <script type="application/ld+json" set:html={JSON.stringify(generateArticleSchema(post, locale))} />
  <script type="application/ld+json" set:html={JSON.stringify(generateBreadcrumbSchema(breadcrumbItems))} />
  
  <Header locale={locale} currentPath={blogPath} />
  
  <!-- Breadcrumb -->
  <nav class="bg-gray-50 py-4 pt-32">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <ol class="flex items-center space-x-2 text-sm">
        <li>
          <a href="/" class="text-gray-500 hover:text-gray-700">
            {t.blog.breadcrumb.home}
          </a>
        </li>
        <li class="text-gray-400">/</li>
        <li>
          <a href="/blog" class="text-gray-500 hover:text-gray-700">
            {t.blog.breadcrumb.blog}
          </a>
        </li>
        <li class="text-gray-400">/</li>
        <li class="text-gray-900 font-medium truncate">
          {post.title}
        </li>
      </ol>
    </div>
  </nav>

  <!-- Article -->
  <article class="bg-white">
    <!-- Reading Progress Bar -->
    <div class="fixed top-0 left-0 w-full h-1 bg-gray-200 z-50">
      <div id="reading-progress" class="h-full bg-blue-600 transition-all duration-300 ease-out" style="width: 0%"></div>
    </div>

    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
        <!-- Main Content -->
        <div class="lg:col-span-10 lg:col-start-2">
          <!-- Article Header -->
          <header class="pt-16 pb-8">
            <div class="flex items-center text-sm text-gray-500 mb-6">
              {(() => {
                const categorySlug = post.category.toLowerCase().replace(/\s+/g, '-');
                const categoryUrl = locale === 'pt' ? `/blog/category/${categorySlug}` : `/${locale}/blog/category/${categorySlug}`;
                return (
                  <a 
                    href={categoryUrl}
                    class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm font-medium hover:bg-gray-200 transition-colors"
                  >
                    {post.category}
                  </a>
                );
              })()}
              <span class="mx-3">•</span>
              <time datetime={post.date.toISOString()}>
                {post.date.toLocaleDateString('pt-BR', { 
                  year: 'numeric', 
                  month: 'long', 
                  day: 'numeric' 
                })}
              </time>
              <span class="mx-3">•</span>
              <span>{post.readingTime} {t.date.readTime}</span>
            </div>
            
            <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-gray-900 mb-12 leading-tight tracking-tight font-serif">
              {post.title}
            </h1>
            
            <p class="text-2xl md:text-3xl text-gray-600 mb-12 leading-relaxed font-serif max-w-4xl">
              {post.description}
            </p>
            
            <!-- Author Info -->
            <div class="flex items-center mb-12 p-6 bg-gray-50 rounded-2xl">
              <div class="w-16 h-16 rounded-full overflow-hidden shadow-lg flex items-center justify-center bg-gradient-to-br from-blue-500 to-purple-600">
                <span class="text-white font-semibold text-xl">
                  {authorInitials}
                </span>
              </div>
              <div class="ml-6">
                <p class="font-semibold text-gray-900 text-lg">
                  {authorName}
                </p>
                <p class="text-gray-600">
                  {t.blog.authorBio}
                </p>
              </div>
            </div>
            
            <!-- Tags -->
            <div class="flex flex-wrap gap-2 mb-8">
              {post.tags.map((tag: string) => {
                const tagSlug = tag.toLowerCase().replace(/\s+/g, '-');
                const tagUrl = locale === 'pt' ? `/blog/tag/${tagSlug}` : `/${locale}/blog/tag/${tagSlug}`;
                return (
                  <a 
                    href={tagUrl}
                    class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm hover:bg-gray-200 transition-colors cursor-pointer"
                  >
                    #{tag}
                  </a>
                );
              })}
            </div>
          </header>
          
          <!-- Featured Image -->
          <div class="mb-16">
            <div class="relative overflow-hidden rounded-2xl shadow-2xl bg-gray-100 flex items-center justify-center">
              <Image 
                src={post.cover} 
                alt={post.title}
                class="w-full h-auto max-h-[600px] object-contain"
                width={1200}
                height={600}
                loading="lazy"
                quality={90}
                format="webp"
                sizes="(max-width: 768px) 100vw, (max-width: 1200px) 80vw, 1200px"
                decoding="async"
              />
            </div>
          </div>
          
          <!-- Article Content -->
          <div class="prose prose-xl max-w-none font-serif prose-p:text-xl prose-p:leading-relaxed prose-p:mb-8 prose-h1:text-4xl prose-h1:mb-8 prose-h1:mt-16 prose-h2:text-3xl prose-h2:mb-6 prose-h2:mt-12 prose-h3:text-2xl prose-h3:mb-4 prose-h3:mt-10 prose-li:text-xl prose-li:leading-relaxed prose-li:mb-3 prose-blockquote:text-xl prose-blockquote:my-10 prose-blockquote:pl-8 prose-blockquote:border-l-4 prose-blockquote:border-blue-500 prose-img:my-8 prose-img:rounded-lg prose-img:shadow-lg prose-img:w-full prose-img:max-w-full prose-img:h-auto prose-img:object-contain">
            <slot />
          </div>
          
          <!-- Article Footer -->
          <footer class="mt-20 pt-16 border-t border-gray-200">
            <!-- Social Share -->
            <div class="flex items-center justify-center space-x-8 mb-12">
              <span class="text-lg text-gray-500 font-medium">{t.blog.share}</span>
              <a 
                href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.title)}&url=${encodeURIComponent(`https://sapiensit.com/blog/${post.slug}`)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-400 hover:text-blue-400 transition-all duration-300 p-3 rounded-full hover:bg-blue-50 hover:scale-110"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              </a>
              <a 
                href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(`https://sapiensit.com/blog/${post.slug}`)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-400 hover:text-blue-600 transition-all duration-300 p-3 rounded-full hover:bg-blue-50 hover:scale-110"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
            </div>
            
            <!-- Author Bio -->
            <div class="flex items-center justify-center p-8 bg-gradient-to-r from-gray-50 to-blue-50 rounded-2xl">
              <div class="w-20 h-20 rounded-full overflow-hidden shadow-xl flex items-center justify-center bg-gradient-to-br from-blue-500 to-purple-600">
                <span class="text-white font-semibold text-2xl">
                  {authorInitials}
                </span>
              </div>
              <div class="ml-8 text-center">
                <p class="font-semibold text-gray-900 text-xl">
                  {authorName}
                </p>
                <p class="text-gray-600 text-lg">
                  {t.blog.authorBioFull}
                </p>
              </div>
            </div>
            
            <!-- Previous/Next Navigation -->
            {(previous || next) && (
              <nav class="mt-16 mb-20 pt-12 pb-8 border-t-2 border-gray-200">
                <div class="flex flex-col sm:flex-row justify-between gap-6">
                  {previous ? (
                    <a 
                      href={locale === 'pt' ? `/blog/${previous.slug}` : `/${locale}/blog/${previous.slug}`}
                      class="flex-1 group p-6 bg-white rounded-xl border border-gray-200 hover:border-blue-500 hover:shadow-lg transition-all duration-300"
                    >
                      <div class="flex items-center gap-2 text-sm font-medium text-blue-600 mb-3">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                        <span>{t.buttons.previous}</span>
                      </div>
                      <h3 class="text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors line-clamp-2">
                        {previous.title}
                      </h3>
                    </a>
                  ) : (
                    <div class="flex-1"></div>
                  )}
                  {next ? (
                    <a 
                      href={locale === 'pt' ? `/blog/${next.slug}` : `/${locale}/blog/${next.slug}`}
                      class="flex-1 group p-6 bg-white rounded-xl border border-gray-200 hover:border-blue-500 hover:shadow-lg transition-all duration-300 text-right"
                    >
                      <div class="flex items-center justify-end gap-2 text-sm font-medium text-blue-600 mb-3">
                        <span>{t.buttons.next}</span>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                      </div>
                      <h3 class="text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors line-clamp-2">
                        {next.title}
                      </h3>
                    </a>
                  ) : (
                    <div class="flex-1"></div>
                  )}
                </div>
              </nav>
            )}
          </footer>
        </div>
      </div>
    </div>
  </article>

  <!-- Related Posts Section -->
  {relatedPosts.length > 0 && (
    <section class="pt-20 pb-16 bg-gray-50">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
          {t.blog.relatedPosts}
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {relatedPosts.map((relatedPost) => (
            <article class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
              <div class="p-6">
                <h3 class="font-semibold text-gray-900 mb-2 hover:text-blue-600">
                  <a href={`/blog/${relatedPost.slug}`}>
                    {relatedPost.title}
                  </a>
                </h3>
                <p class="text-gray-600 text-sm mb-3">
                  {relatedPost.date.toLocaleDateString('pt-BR')}
                </p>
                <p class="text-gray-500 text-sm">
                  {relatedPost.readingTime} {t.date.readTime}
                </p>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Newsletter Section -->
  <section class="py-16 bg-blue-50">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">
        {t.blog.receiveArticles}
      </h2>
      <p class="text-gray-600 mb-8">
        {t.blog.receiveArticlesDescription}
      </p>
      <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
        <input
          type="email"
          placeholder={t.blog.emailPlaceholder}
          class="flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
        <button
          type="submit"
          class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium transition-colors"
        >
          {t.buttons.subscribe}
        </button>
      </form>
    </div>
  </section>

  <Footer locale={locale} />
</BaseLayout>

<script>
  // Reading progress bar
  function updateReadingProgress() {
    const article = document.querySelector('article');
    const progressBar = document.getElementById('reading-progress');
    
    if (!article || !progressBar) return;
    
    const articleTop = article.offsetTop;
    const articleHeight = article.offsetHeight;
    const windowHeight = window.innerHeight;
    const scrollTop = window.pageYOffset;
    
    const progress = Math.min(
      Math.max((scrollTop - articleTop + windowHeight) / articleHeight, 0),
      1
    );
    
    progressBar.style.width = `${progress * 100}%`;
  }
  
  // Smooth scrolling for anchor links
  function initSmoothScrolling() {
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
  }
  
  // Initialize on page load
  document.addEventListener('DOMContentLoaded', function() {
    updateReadingProgress();
    initSmoothScrolling();
    
    // Update progress on scroll
    window.addEventListener('scroll', updateReadingProgress);
    window.addEventListener('resize', updateReadingProgress);
  });
</script>

<script type="module">
  import mermaid from 'https://cdn.jsdelivr.net/npm/mermaid@11/dist/mermaid.esm.min.mjs';
  
  function extractMermaidText(element) {
    if (element.querySelector('.line')) {
      const lines = element.querySelectorAll('.line');
      return Array.from(lines)
        .map(line => {
          const text = line.textContent || line.innerText || '';
          return text.trim();
        })
        .filter(text => text.length > 0)
        .join('\n');
    }
    const text = element.textContent || element.innerText || '';
    return text.trim();
  }
  
  function prepareMermaidBlocks() {
    const mermaidBlocks = document.querySelectorAll('pre[data-language="mermaid"]');
    
    if (mermaidBlocks.length === 0) {
      return false;
    }
    
    mermaidBlocks.forEach((pre) => {
      const code = pre.querySelector('code');
      if (!code) return;
      
      const mermaidText = extractMermaidText(code);
      if (!mermaidText) return;
      
      pre.className = 'mermaid';
      pre.removeAttribute('data-language');
      pre.removeAttribute('style');
      pre.removeAttribute('tabindex');
      pre.textContent = mermaidText;
    });
    
    return true;
  }
  
  async function initMermaid() {
    try {
      prepareMermaidBlocks();
      
      mermaid.initialize({ 
        startOnLoad: false,
        theme: 'default',
        securityLevel: 'loose',
        themeVariables: {
          primaryColor: '#3b82f6',
          primaryTextColor: '#fff',
          primaryBorderColor: '#2563eb',
          lineColor: '#6b7280',
          secondaryColor: '#e5e7eb',
          tertiaryColor: '#f3f4f6'
        }
      });
      
      await mermaid.run({
        querySelector: '.mermaid',
        suppressErrors: true
      });
    } catch (error) {
      console.error('Error initializing Mermaid:', error);
    }
  }
  
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initMermaid);
  } else {
    initMermaid();
  }
</script>

