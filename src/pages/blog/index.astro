---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import { getTranslations } from '@/utils/i18n';
import { getAllPosts, getAllCategories, getAllTags } from '@/utils/blog';
import type { Locale } from '@/i18n/config';

const locale: Locale = 'pt';
const t = await getTranslations(locale, 'common');

// Get all posts, categories, and tags
const allPosts = await getAllPosts(locale);
const categories = await getAllCategories(locale);
const tags = await getAllTags(locale);

// Pagination
const postsPerPage = 10;
const currentPage = 1;
const totalPages = Math.ceil(allPosts.length / postsPerPage);
const paginatedPosts = allPosts.slice(0, postsPerPage);

const seo = {
  title: 'Blog - Consultoria Empresarial',
  description: 'Insights e tendências do mercado. Artigos sobre transformação digital, gestão de projetos, estratégia empresarial e muito mais.',
  image: '/images/og-blog.jpg'
};
---

<BaseLayout seo={seo} locale={locale} path="/blog">
  <Header locale={locale} currentPath="/blog" />
  
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-gray-900 dark:to-gray-800 py-16 pt-32">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          {t.blog.title}
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          {t.blog.subtitle}
        </p>
      </div>
    </div>
  </section>

  <!-- Blog Content -->
  <section class="py-20 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        <!-- Main Content -->
        <div class="lg:col-span-3">
          <!-- Search and Filters -->
          <div class="mb-8">
            <div class="flex flex-col md:flex-row gap-4 mb-6">
              <!-- Search -->
              <div class="flex-1">
                <input
                  type="text"
                  placeholder={t.blog.searchPlaceholder}
                  class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-800 dark:text-white"
                />
              </div>
              
              <!-- Category Filter -->
              <select class="px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-800 dark:text-white">
                <option value="">{t.blog.allCategories}</option>
                {categories.map(category => (
                  <option value={category}>{category}</option>
                ))}
              </select>
            </div>
            
            <!-- Tags -->
            <div class="flex flex-wrap gap-2">
              <span class="text-sm font-medium text-gray-700 dark:text-gray-300">{t.blog.tags}</span>
              {tags.slice(0, 10).map(tag => (
                <span class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-full text-sm hover:bg-blue-100 dark:hover:bg-blue-900 cursor-pointer transition-colors">
                  {tag}
                </span>
              ))}
            </div>
          </div>
          
          <!-- Posts Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {paginatedPosts.map((post) => (
              <article class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
                <a href={`/blog/${post.slug}`}>
                  <img 
                    src={post.cover} 
                    alt={post.title}
                    class="w-full h-48 object-cover"
                    loading="lazy"
                  />
                </a>
                <div class="p-6">
                  <div class="flex items-center text-sm text-gray-500 dark:text-gray-400 mb-3">
                    <span class="px-2 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-full text-xs font-medium">
                      {post.category}
                    </span>
                    <span class="mx-2">•</span>
                    <span>{post.date.toLocaleDateString('pt-BR')}</span>
                    <span class="mx-2">•</span>
                    <span>{post.readingTime} min de leitura</span>
                  </div>
                  
                  <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-3 hover:text-blue-600 dark:hover:text-blue-400">
                    <a href={`/blog/${post.slug}`}>
                      {post.title}
                    </a>
                  </h2>
                  
                  <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-3">
                    {post.description}
                  </p>
                  
                  <div class="flex items-center justify-between">
                    <div class="flex flex-wrap gap-1">
                      {post.tags.slice(0, 3).map(tag => (
                        <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-400 rounded text-xs">
                          #{tag}
                        </span>
                      ))}
                    </div>
                    
                    <a 
                      href={`/blog/${post.slug}`}
                      class="text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-medium text-sm"
                    >
                      {t.buttons.readMore} →
                    </a>
                  </div>
                </div>
              </article>
            ))}
          </div>
          
          <!-- Load More Button -->
          {totalPages > 1 && (
            <div class="text-center mt-12">
              <button class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-lg font-medium transition-colors">
                {t.buttons.loadMore}
              </button>
            </div>
          )}
        </div>
        
        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <div class="sticky top-8 space-y-8">
            <!-- Categories -->
            <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                {t.blog.categories}
              </h3>
              <ul class="space-y-2">
                {categories.map(category => (
                  <li>
                    <a 
                      href={`/blog/category/${category.toLowerCase().replace(/\s+/g, '-')}`}
                      class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                    >
                      {category}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
            
            <!-- Popular Tags -->
            <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                {t.blog.popularTags}
              </h3>
              <div class="flex flex-wrap gap-2">
                {tags.map(tag => (
                  <a 
                    href={`/blog/tag/${tag.toLowerCase().replace(/\s+/g, '-')}`}
                    class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full text-sm hover:bg-blue-100 dark:hover:bg-blue-900 transition-colors"
                  >
                    #{tag}
                  </a>
                ))}
              </div>
            </div>
            
            <!-- Newsletter -->
            <div class="bg-blue-50 dark:bg-blue-900/20 p-6 rounded-lg">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
                {t.blog.newsletter}
              </h3>
              <p class="text-gray-600 dark:text-gray-300 text-sm mb-4">
                {t.blog.newsletterDescription}
              </p>
              <form class="space-y-3">
                <input
                  type="email"
                  placeholder={t.blog.emailPlaceholder}
                  class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-800 dark:text-white text-sm"
                />
                <button
                  type="submit"
                  class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded-md text-sm font-medium transition-colors"
                >
                  {t.buttons.subscribe}
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer locale={locale} />
</BaseLayout>
