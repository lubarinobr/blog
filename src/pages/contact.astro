---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import ContactForm from '@/components/ContactForm.tsx';
import { getTranslations } from '@/utils/i18n';
import type { Locale } from '@/i18n/config';

const locale: Locale = 'pt';
const t = await getTranslations(locale, 'common');

const seo = {
  title: 'Contato - Consultoria Empresarial',
  description: 'Entre em contato conosco para uma consultoria personalizada. Transformamos sua empresa com soluções estratégicas e treinamentos corporativos.',
  image: '/images/og-contact.jpg'
};
---

<BaseLayout seo={seo} locale={locale} path="/contact">
  <Header locale={locale} currentPath="/contact" />
  
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-gray-900 dark:to-gray-800 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          Entre em Contato
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Pronto para transformar sua empresa? Entre em contato conosco e descubra como podemos ajudar 
          a impulsionar o crescimento do seu negócio.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-20 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div>
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">
            Envie sua Mensagem
          </h2>
          <ContactForm locale={locale} client:load />
        </div>
        
        <!-- Contact Info -->
        <div>
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">
            Informações de Contato
          </h2>
          
          <div class="space-y-8">
            <!-- Email -->
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-1">
                  E-mail
                </h3>
                <p class="text-gray-600 dark:text-gray-300">
                  contato@consultoria-exemplo.com
                </p>
                <p class="text-gray-600 dark:text-gray-300">
                  comercial@consultoria-exemplo.com
                </p>
              </div>
            </div>
            
            <!-- Phone -->
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-1">
                  Telefone
                </h3>
                <p class="text-gray-600 dark:text-gray-300">
                  +55 11 99999-9999
                </p>
                <p class="text-gray-600 dark:text-gray-300">
                  +55 11 3333-4444
                </p>
              </div>
            </div>
            
            <!-- Address -->
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-1">
                  Endereço
                </h3>
                <p class="text-gray-600 dark:text-gray-300">
                  Rua das Empresas, 123<br>
                  Vila Olímpia<br>
                  São Paulo - SP, 04551-000
                </p>
              </div>
            </div>
            
            <!-- Business Hours -->
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-1">
                  Horário de Funcionamento
                </h3>
                <p class="text-gray-600 dark:text-gray-300">
                  Segunda a Sexta: 8h às 18h<br>
                  Sábado: 9h às 13h<br>
                  Domingo: Fechado
                </p>
              </div>
            </div>
          </div>
          
          <!-- Calendly Integration -->
          <div class="mt-8">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">
              Agende uma Reunião
            </h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">
              Prefere agendar diretamente? Use nosso calendário online para escolher o melhor horário.
            </p>
            <a 
              href="https://calendly.com/consultoria-exemplo" 
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium transition-colors"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              Agendar Reunião
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="py-20 bg-gray-50 dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
          Nossa Localização
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300">
          Estamos localizados no coração de São Paulo, próximo ao metrô Vila Olímpia.
        </p>
      </div>
      
      <div class="bg-gray-200 dark:bg-gray-700 rounded-lg h-96 flex items-center justify-center">
        <p class="text-gray-500 dark:text-gray-400">
          Mapa interativo será integrado aqui
        </p>
      </div>
    </div>
  </section>

  <Footer locale={locale} />
</BaseLayout>
