---
import { Image } from 'astro:assets';
import type { Locale } from '@/i18n/config';
import { getTranslations } from '@/utils/i18n';
import { getLocalizedPath } from '@/utils/i18n';

// Import logo image for optimization
import logoImage from '/public/images/logo.png';

export interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = await getTranslations(locale, 'common');
---

<footer class="bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="lg:col-span-2">
        <div class="flex items-center mb-4">
          <Image 
            src={logoImage} 
            alt="Consultoria Empresarial" 
            class="h-[10rem] w-auto"
            width={200}
            height={200}
            loading="lazy"
            quality={90}
          />
        </div>
        <p class="text-gray-300 mb-4 max-w-md">
          {t.footer.description}
        </p>
        <div class="flex space-x-4">
          <a 
            href="https://www.linkedin.com/company/sapiensit" 
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-white transition-colors"
            aria-label="LinkedIn"
          >
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a 
            href="https://twitter.com/consultoria_exemplo" 
            class="text-gray-400 hover:text-white transition-colors"
            aria-label="Twitter"
          >
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4">{t.footer.quickLinks}</h3>
        <ul class="space-y-2">
          <li>
            <a 
              href={getLocalizedPath('/', locale)} 
              class="text-gray-300 hover:text-white transition-colors"
            >
              {t.nav.home}
            </a>
          </li>
          <li>
            <a 
              href={getLocalizedPath('/blog', locale)} 
              class="text-gray-300 hover:text-white transition-colors"
            >
              {t.nav.blog}
            </a>
          </li>
          <li>
            <a 
              href={getLocalizedPath('/contact', locale)} 
              class="text-gray-300 hover:text-white transition-colors"
            >
              {t.nav.contact}
            </a>
          </li>
        </ul>
      </div>
      
      <!-- Contact Info -->
      <div>
        <h3 class="text-lg font-semibold mb-4">{t.footer.contact}</h3>
        <div class="space-y-2 text-gray-300">
          <p>üìß {t.footer.email}</p>
          <p>üìû {t.footer.phone}</p>
          <p>üìç {t.footer.address}</p>
        </div>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 mt-8 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-400 text-sm">
          {t.footer.copyright}
        </p>
        <div class="flex space-x-6 mt-4 md:mt-0">
          <a 
            href={getLocalizedPath('/privacy', locale)} 
            class="text-gray-400 hover:text-white text-sm transition-colors"
          >
            {t.footer.privacy}
          </a>
          <a 
            href={getLocalizedPath('/terms', locale)} 
            class="text-gray-400 hover:text-white text-sm transition-colors"
          >
            {t.footer.terms}
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
