---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import ContactForm from '@/components/ContactForm';
import { getTranslations, getLocalizedPath } from '@/utils/i18n';
import type { Locale } from '@/i18n/config';

interface Props {
  locale: Locale;
}

const contactInfo = {
  pt: {
    seo: {
      title: 'Contato - Consultoria Empresarial',
      description: 'Entre em contato conosco para uma consultoria personalizada. Transformamos sua empresa com soluções estratégicas e treinamentos corporativos.',
      image: '/images/og-contact.jpg'
    }
  },
  en: {
    seo: {
      title: 'Contact - Business Consulting',
      description: 'Get in touch with us for personalized consulting. We transform your company with strategic solutions and corporate training.',
      image: '/images/og-contact.jpg'
    }
  },
  es: {
    seo: {
      title: 'Contacto - Consultoría Empresarial',
      description: 'Ponte en contacto con nosotros para una consultoría personalizada. Transformamos tu empresa con soluciones estratégicas y capacitaciones corporativas.',
      image: '/images/og-contact.jpg'
    }
  }
};

const { locale } = Astro.props;
const t = await getTranslations(locale, 'common');
const info = contactInfo[locale];
const seo = info.seo;
const path = getLocalizedPath('/contact', locale);
---

<BaseLayout seo={seo} locale={locale} path={path}>
  <Header locale={locale} currentPath={path} />
  
  <section class="bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-gray-900 dark:to-gray-800 py-16 pt-32">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          {t.contact.title}
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          {t.contact.subtitle}
        </p>
      </div>
    </div>
  </section>

  <form name="contact" netlify netlify-honeypot="honeypot" hidden>
    <input type="hidden" name="form-name" value="contact" />
    <input type="text" name="name" />
    <input type="email" name="email" />
    <input type="text" name="company" />
    <input type="text" name="subject" />
    <input type="text" name="honeypot" />
  </form>

  <section class="py-20 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-12">
          <div>
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
              {t.contact.sendMessage}
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-300 mb-6">
              {t.contact.subtitle}
            </p>
            <ContactForm client:load locale={locale} />
          </div>
          
          <div>
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
              {t.contact.scheduleMeeting}
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-300 mb-8">
              {t.contact.scheduleDescription}
            </p>
            <a
              href="https://calendly.com/sapiensit"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-lg text-lg font-medium transition-colors cursor-pointer shadow-lg hover:shadow-xl"
            >
              <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              {t.contact.scheduleButton}
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer locale={locale} />
</BaseLayout>

